{
  "name": "devops-mcp-extension",
  "displayName": "DevOps MCP Extension",
  "description": "A VS Code extension for DevOps automation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:devops-mcp.mainView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devops-mcp-sidebar",
          "title": "DevOps MCP",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "devops-mcp-sidebar": [
        {
          "type": "webview",
          "id": "devops-mcp.mainView",
          "name": "Input Panel"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.8"
  }
}
